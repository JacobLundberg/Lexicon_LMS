@model Lexicon_LMS.Models.Course

@{
    ViewData["Title"] = "Redigera Kurs";
}

<h1>Redigera Kurs</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <buttton type="submit" class="btn btn-primary btn-sm" ><i class="fas fa-save"></i> Spara</buttton>
                </div>
            </form>
        </div>
    </div>
<br />
<hr />
    <div>
        <a class="btn btn-sm btn-info" asp-controller="Courses" asp-action="Details" asp-route-id="@TempData.Peek("LastCourseId")"><i class="fas fa-undo-alt"></i> Tillbaka till kurs @TempData.Peek("LastCourseName")</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
